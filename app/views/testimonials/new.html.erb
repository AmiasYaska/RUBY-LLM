<div class="max-w-lg mx-auto mt-10 p-6 bg-white shadow-lg rounded-lg">
  <h1 class="text-2xl font-bold text-gray-800 mb-6">Generate a Social Post</h1>
  
  <%= form_with url: testimonials_path, method: :post, class: "space-y-4", data: { turbo: true } do %>
    <div>
      <label for="testimonial_text" class="block text-sm font-medium text-gray-700">
        Enter Your Testimonial
      </label>
      <%= text_area_tag "testimonial[text]", @testimonial[:text], 
            rows: 4, 
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>
    <%= submit_tag "Generate Post", class: "w-full bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700" %>
  <% end %>

  <div id="social-post-output">
    <%# Initial empty state - will be populated by Turbo Stream %>
  </div>
</div>